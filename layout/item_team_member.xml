<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:id="@+id/team_member_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_wizard"
        android:background="@drawable/circle_bg"
        android:contentDescription="Team member photo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/team_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rizve Reza"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team_member_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CEO and Founder"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/team_member_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passionate about building great apps."
            android:textSize="14sp"
            android:paddingTop="4dp" />
    </LinearLayout>
</LinearLayout>